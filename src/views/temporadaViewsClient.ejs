<%- include("./partials/head") %> <%- include("./partials/header")%>

<main class="main-paginas">
  <h1 class=" titulo-paginas">Lista de Temporadas</h1>



    
  <% if (temporada.length > 0) { %>
    <ul class="lado-esquerdo-filho1">
      <% for (let detailsTemporada of temporada) { %>
      <li class="lado-esquerdo-neto1 lado-esquerdo-neto1-destaque">
        <a href="/detailsTemporada/<%= detailsTemporada.id %>">
          <div class="zoomable-image-container">
            <img class="zoomable-image" src="<%= detailsTemporada.image %>" alt="Capa Noticia" />
            <div class="zoomable-image-overlay"></div>
          </div>
          <h1><%= detailsTemporada.titulo %></h1>
          <h3>Data: <%= detailsTemporada.created_at.toLocaleDateString() %></h3>
          <p><%= detailsTemporada.description.substring(0, 298) %>...</p>

        </a>
      </li>
      <% } %>
      <% } %>
    </ul>
  
</main>

<%- include("./partials/footer") %>
