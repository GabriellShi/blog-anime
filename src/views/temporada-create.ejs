<%- include("./partials/headAdm") %> <%- include("./partials/headerAdm") %>

<h1 class="titulo-news-create">Criar Temporada</h1>

 <main class="form-news-create">

    <form action="/detailsTemporada/create" method="post" enctype="multipart/form-data" >
   
            <input class="input-form" type="text" name="titulo" placeholder="Titulo">
            <input class="input-form" type="file" name="image">
            <input class="input-form" type="text" name="description" placeholder="Descrição">    
            <input class="input-form" type="text" name="conecxao" placeholder="Conexão">
            <input class="input-form" type="text" name="genero1" placeholder="Genero 1"  >
            <input class="input-form" type="text" name="genero2" placeholder="Genero 2" >
            <input class="input-form" type="text" name="genero3" placeholder="Genero 3" >
            <input class="input-form" type="date" name="estreia" placeholder="Data de Estreia" >
            <input class="input-form" type="text" name="streaming" placeholder="streaming" >

            <select class="input-form" name="categoria"> <option value="" disabled selected>Categoria</option>
                <option value="Recomendações">Recomendações</option> <option value="Novidades">Novidades</option> 
                <option value="Temporadas">Temporadas</option> <option value="Curiosidades">Curiosidades</option>
              </select>
              <select class="input-form" name="tipo"> <option value="" disabled selected>Tipo</option>
                 <option value="Animes">Animes</option> <option value="Mangas">Mangas</option> 
              </select>


            <button type="submit"> Criar Temporada </button>
    </form> 
</main>