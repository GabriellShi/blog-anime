<ul class="lado-esquerdo-filho2" id="newsList">
    <% for (const noticia of newsSlice) { %>
      <li>
        <div class="lado-esquerdo-filho3">
          <div class="zoomable-image-container image-principais-noticias">
            <a href="<%= noticia.categoria === 'Curiosidades' ? '/detailsNews/' + noticia.id : '/detailsRecomenda/' + noticia.id %>">
              <% if (noticia.image) { %>
                <img class="zoomable-image" src="<%= noticia.imageUrl %>" alt="Capa Noticia" />
                <% } else { %>
                <!-- Coloque aqui um placeholder caso a imagem nÃ£o esteja disponÃ­vel -->
              <% } %>
            </a>
          </div>
          <div class="lado-esquerdo-neto2">
            <h2><%= noticia.titulo %></h2>
            <h4>Data: <%= new Date(noticia.created_at).toLocaleDateString() %></h4>
            <p><%- noticia.description.substring(0, 200) %>...</p>
          </div>
        </div>
      </li>
    <% } %>
  </ul>
  
  