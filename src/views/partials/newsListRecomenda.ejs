<ul class="lado-esquerdo-filho1" id="newsListRecomenda">

    <% for (const noticia of newsSliceRecomenda) { %>
        <li class="lado-esquerdo-neto1 lado-esquerdo-neto1-destaque">
          <a href="<%= '/detailsRecomenda/' + noticia.id %>">

            <div class="zoomable-image-container">
                    <% if (noticia.image) { %>
                <img class="zoomable-image" src="<%= noticia.imageUrl %>" alt="Capa noticia" />
                <% } else { %>
                <!-- Coloque aqui um placeholder caso a imagem nÃ£o esteja disponÃ­vel -->
              <% } %>
              <div class="zoomable-image-overlay"></div>
          
          </div>
 
            <h1><%= noticia.titulo %></h1>
            <h3>Data: <%= noticia.created_at.toLocaleDateString() %></h3>
            <p><%- noticia.description.substring(0, 298) %>...</p>
        </div>
      </a>

      </li>
    <% } %>
  </ul>
  

  