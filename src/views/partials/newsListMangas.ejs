<ul class="lado-esquerdo-filho1" id="newsListMangas">

    <% for (const noticia of newsSliceMangas) { %>
        <li class="lado-esquerdo-neto1 lado-esquerdo-neto1-destaque">
          <a rel="canonical" href="<%= noticia instanceof News ? '/detailsNews/' + noticia.titulo.replace(/ /g, '-') : '/detailsRecomenda/' + noticia.titulo.replace(/ /g, '-') %>" target="_blank">

            <div class="zoomable-image-container">
              <% if (noticia.image) { %>
                <img class="zoomable-image" src="<%= noticia.image %>" alt="Capa Noticia" />
                <% } else { %>
                <!-- Coloque aqui um placeholder caso a imagem nÃ£o esteja disponÃ­vel -->
              <% } %>
              <div class="zoomable-image-overlay"></div>
          </div>
 
            <h2><%= noticia.titulo %></h2>
            <h3>Data: <%= noticia.created_at.toLocaleDateString('pt-BR') %></h3>
            <% if (noticia instanceof News && noticia.description1) { %>
              <p><%- noticia.description1.substring(0, 200) %>...</p>
            <% } %>
        </div>
      </a>

      </li>
    <% } %>
  </ul>
  

  