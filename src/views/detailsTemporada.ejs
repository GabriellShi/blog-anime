<%- include("./partials/head") %> <%- include("./partials/header") %>

<main>
  <section class="lado-esquerdo-pai">
    <div class="titulo-noticia">
      <h1> <%= detailsTemporada.titulo %></h1>
    </div>

    <div class="sect-autor-data-pai">
      <div class="sect-autor-data-filho">
        <img src="/img/autor.png" alt="" />
        <h2>Gabriel</h2>
      </div>
      <div class="sect-autor-data-filho">
        <img src="/img/data.png" alt="" />
        <h2><%= detailsTemporada.created_at.toLocaleDateString('pt-BR') %></h2>
      </div>
    </div>

    <div class="sect-capa-pagina-noticia">
      <img src="<%= detailsTemporada.image %>" alt="Imagem" />


    </div>

    <div class="sect-descricao">
      <p>
        <%= detailsTemporada.description %>
      </p>
    </div>

    <div class="sect-leia-tambem-pai">
      <h1>Leia tambem:</h1>
      <div class="sect-leia-tambem-filho">
        <img src="/img/bola-vermelha.png" alt="" />
        <h2>
          Zom 100: Bucket List of the Dead – 5º Episódio do anime sofre com
          atraso
        </h2>
      </div>
      <div class="sect-leia-tambem-filho">
        <img src="/img/bola-vermelha.png" alt="" />
        <h2>
          Zom 100: Bucket List of the Dead – 5º Episódio do anime sofre com
          atraso
        </h2>
      </div>
      <div class="sect-leia-tambem-filho">
        <img src="/img/bola-vermelha.png" alt="" />
        <h2>
          Zom 100: Bucket List of the Dead – 5º Episódio do anime sofre com
          atraso
        </h2>
      </div>
    </div>

    <div class="sect-veja-mais">
      <img src="/img/bola-vermelha.png" alt="" />
      <h3>Veja mais sobre: <%= detailsTemporada.conecxao %></h3>
    </div>

    <div class="linha-noticia"></div>

    <div class="sect-resenha-autor">
      <img src="/img/bola-vermelha.png" alt="" />
      <h2>
        Fuzi <br />
        Redator, designer e ilustrador freelancer. Um fã eterno de animes e
        mangás japoneses.
      </h2>
    </div>
  </section>
  <section class="lado-direito-pai">
    <h1 class="titulo-destaque-index">ANIME</h1>

   <ul>
      <% for (let anime of tipoAnime) { %>
        <li class="lado-esquerdo-neto1 lado-direito-neto1">
          <button type="submit">
            <% if (anime.contentType === 'News') { %>
              <a href="/detailsNews/<%= anime.id %>">
            <% } else if (anime.contentType === 'Recomenda') { %>
              <a href="/detailsRecomenda/<%= anime.id %>">
            <% } else if (anime.contentType === 'Temporada') { %>
              <a href="/detailsTemporada/<%= anime.id %>">
            <% } %>
            <div>
              <img src="<%= anime.image %>" alt="Capa Notica" />
            </div>
            <div>
              <h1><%= anime.titulo %></h1>
              <h3><%= new Date(anime.created_at).toLocaleDateString('pt-BR') %></h3>
            </div>
            <% if (anime.contentType === 'News') { %>
              </a>
            <% } else if (anime.contentType === 'Recomenda') { %>
              </a>
            <% } else if (anime.contentType === 'Temporada') { %>
              </a>
            <% } %>
          </button>
        </li>
      <% } %>
    </ul>
 
    


    
    

    <h1 class="titulo-destaque-index">MANGA</h1>

    <% if (tipoMangas.length > 0) { %>
      <ul>
        <% for (let mangas of tipoMangas) { %>
          <li class="lado-esquerdo-neto1 lado-direito-neto1">
            <a class="manga-link" href="/detailsNews/<%= mangas.id %>">
              <div>
                <img src="<%= mangas.image %>" alt="Capa Notica" />
              </div>
              <div>
                <h1><%= mangas.titulo %></h1>
                <h3><%= new Date(mangas.created_at).toLocaleDateString('pt-BR') %></h3>
              </div>
            </a>
          </li>
        <% } %>
      </ul>
    <% } else { %>
      <h2>Nenhum manga Encontrado</h2>
    <% } %>
    
  </section>
</main>
