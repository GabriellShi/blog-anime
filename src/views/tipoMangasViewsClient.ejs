<%- include("./partials/head") %>
<%- include("./partials/header") %>

<main class="main-paginas">
  <h1 class=" titulo-paginas">MANGAS</h1>
 

  <% if (tipoMangas.length > 0) { %>
    <ul class="lado-esquerdo-filho1">
      <% for (let mangas of tipoMangas) { %>
      <li class="lado-esquerdo-neto1 lado-esquerdo-neto1-destaque">
          <% if (mangas.contentType === 'News') { %>
            <a href="/detailsNews/<%= mangas.id %>">
          <% } else if (mangas.contentType === 'Recomenda') { %>
            <a href="/detailsRecomenda/<%= mangas.id %>">
          <% } else if (mangas.contentType === 'Temporada') { %>
            <a href="/detailsTemporada/<%= mangas.id %>">
          <% } %>
          <div class="zoomable-image-container">
            <img class="zoomable-image" src="<%= mangas.image %>" alt="Capa Noticia" />
            <div class="zoomable-image-overlay"></div>
          </div>
          <h1><%= mangas.titulo %></h1>
          <h3>Data: <%= mangas.created_at.toLocaleDateString() %></h3>
          <p><%= mangas.description.substring(0, 298) %>...</p>
          <% if (mangas.contentType === 'News') { %>
          </a>
        <% } else if (mangas.contentType === 'Recomenda') { %>
          </a>
        <% } else if (mangas.contentType === 'Temporada') { %>
          </a>
        <% } %>
        </a>
      </li>
      <% } %>
      <% } %>
    </ul>
</main>


